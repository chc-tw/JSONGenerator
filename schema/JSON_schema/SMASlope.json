                "numerator": {
                    "type": "object",
                    "description": "Details of the numerator in the comparison.",
                    "properties": {
                        "smaValue": {
                            "type": "number",
                            "description": "The value of the Simple Moving Average for the numerator."
                        }
                    },
                    "required": [
                        "smaValue"
                    ],
                    "additionalProperties": false
                },
                "denominator": {
                    "type": "object",
                    "description": "Details of the denominator in the comparison.",
                    "properties": {
                        "smaValue": {
                            "type": "number",
