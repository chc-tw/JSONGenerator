{
    "name": "strategy_form_configuration",
    "type": "object",
    "properties": {
        "conditionStyle": {
            "type": "string",
            "description": "Logical style for combining conditions, for example 'and' or 'or'."
        },
        "conditionType": {
            "type": "object",
            "description": "The type of condition being applied.",
            "properties": {
                "label": {
                    "type": "string",
                    "description": "The display label for the condition type."
                },
                "value": {
                    "type": "string",
                    "description": "The internal value representing the condition type."
                }
            },
            "required": [
                "label",
                "value"
            ],
            "additionalProperties": false
        },
        "formula": {
            "type": "object",
            "description": "The formula being used for the strategy.",
            "properties": {
                "label": {
                    "type": "string",
                    "description": "The display label for the formula."
                },
                "value": {
                    "type": "string",
                    "description": "The internal value representing the formula."
                },
                "type": {
                    "type": "string",
                    "description": "The type of the formula, for example 'ma'."
                }
            },
            "required": [
                "label",
                "value",
                "type"
            ],
            "additionalProperties": false
        },
        "timeFrameValue": {
            "type": "number",
            "description": "The numerical value representing the time frame."
        },
        "timeFrameUnit": {
            "type": "object",
            "description": "The unit of the time frame.",
            "properties": {
                "label": {
                    "type": "string",
                    "description": "The display label for the time frame unit."
                },
                "value": {
                    "type": "string",
                    "description": "The internal value representing the time frame unit."
                }
            },
            "required": [
                "label",
                "value"
            ],
            "additionalProperties": false
        },
        "detail": {
            "type": "object",
