                "compareValue": {
                    "type": "number",
                    "description": "The value used for comparison."
                }
            },
            "required": [
                "numerator",
                "denominator",
                "compare",
                "compareValue"
            ],
            "additionalProperties": false
        },
        "params": {
            "type": "object",
            "description": "Parameters for the strategy configuration.",
            "properties": {
                "bbValue": {
                    "type": "null",
                    "description": "Bollinger Bands value, null in this example."
