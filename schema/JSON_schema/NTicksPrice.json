        "timeFrameValue": {
            "type": "number",
            "description": "Value representing the time frame for the strategy."
        },
        "timeFrameUnit": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string",
                    "description": "Human-readable label for the time frame unit."
                },
                "value": {
                    "type": "string",
                    "description": "Machine-readable value for the time frame unit."
                }
            },
            "required": [
                "label",
                "value"
            ],
            "additionalProperties": false
        },
        "detail": {
            "type": "object",
            "properties": {
                "numerator": {
                    "type": "object",
                    "properties": {
                        "minusNumber": {
                            "type": "number",
