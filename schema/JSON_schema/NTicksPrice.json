                "value": {
                    "type": "string",
                    "description": "Machine-readable value for the condition type."
                }
            },
            "required": [
                "label",
                "value"
            ],
            "additionalProperties": false
        },
        "formula": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string",
                    "description": "Human-readable label for the formula."
                },
                "value": {
                    "type": "string",
                    "description": "Machine-readable value for the formula."
                },
                "type": {
                    "type": "string",
                    "description": "Type of the formula being used."
                }
            },
            "required": [
                "label",
                "value",
                "type"
            ],
            "additionalProperties": false
