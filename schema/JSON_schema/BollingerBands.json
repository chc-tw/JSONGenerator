                        "bbType": {
                            "type": "object",
                            "description": "Bollinger Bands type for the denominator.",
                            "properties": {
                                "label": {
                                    "type": "string",
                                    "description": "Label of the Bollinger Bands type, e.g., 'Upper Band'."
