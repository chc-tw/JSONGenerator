{
    "name": "strategy_form",
    "schema": {
        "type": "object",
        "properties": {
            "conditionStyle": {
                "type": "string",
                "description": "The style of the condition ('and' or 'or')",
                "enum": [
                    "and",
                    "or"
                ]
            },
            "conditionType": {
                "type": "object",
                "description": "The selected condition type",
                "properties": {
                    "label": {
                        "type": "string",
                        "description": "The label of the condition type",
                        "enum": [
                            "Bollinger Bands"
                        ]
                    },
                    "value": {
                        "type": "string",
                        "description": "The value of the condition type",
                        "enum": [
                            "bb"
                        ]
                    }
                },
                "required": [
                    "label",
                    "value"
                ],
                "additionalProperties": false
            },
            "formula": {
                "type": "object",
                "description": "The selected formula",
                "properties": {
                    "label": {
                        "type": "string",
                        "description": "The label of the formula",
                        "enum": [
                            "Bollinger Bands Comparison"
                        ]
                    },
                    "value": {
                        "type": "string",
                        "description": "The value of the formula",
                        "enum": [
                            "bb_comparison"
                        ]
                    },
                    "type": {
                        "type": "string",
                        "description": "The type of the formula",
                        "enum": [
                            "bb"
                        ]
                    }
                },
                "required": [
                    "label",
                    "value",
                    "type"
                ],
                "additionalProperties": false
            },
            "timeFrameValue": {
                "type": "number",
                "description": "The numeric value for the time frame"
            },
            "timeFrameUnit": {
                "type": "object",
                "description": "The selected time frame unit",
                "properties": {
                    "label": {
                        "type": "string",
                        "description": "The label of the time frame unit"
                    },
                    "value": {
                        "type": "string",
                        "description": "The value of the time frame unit"
                    }
                },
                "required": [
                    "label",
                    "value"
                ],
                "additionalProperties": false
            },
            "detail": {
                "type": "object",
                "description": "Contains the details of the strategy",
                "properties": {
                    "numerator": {
                        "type": "object",
                        "description": "Properties for the numerator part of the formula",
                        "properties": {
                            "minusNumber": {
                                "type": "number",
                                "description": "Number of days to subtract"
                            },
                            "bbType": {
                                "type": "object",
                                "description": "Bollinger Band type selection",
                                "properties": {
                                    "label": {
                                        "type": "string",
                                        "description": "The label of the Bollinger Band type"
                                    },
                                    "value": {
                                        "type": "string",
                                        "description": "The value of the Bollinger Band type"
                                    }
                                },
                                "required": [
                                    "label",
                                    "value"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "required": [
                            "minusNumber",
                            "bbType"
                        ],
                        "additionalProperties": false
                    },
                    "denominator": {
                        "type": "object",
                        "description": "Properties for the denominator part of the formula",
                        "properties": {
                            "minusNumber": {
                                "type": "number",
                                "description": "Number of days to subtract"
                            },
                            "bbType": {
                                "type": "object",
                                "description": "Bollinger Band type selection",
                                "properties": {
                                    "label": {
                                        "type": "string",
                                        "description": "The label of the Bollinger Band type"
                                    },
                                    "value": {
                                        "type": "string",
                                        "description": "The value of the Bollinger Band type"
                                    }
                                },
                                "required": [
                                    "label",
                                    "value"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "required": [
                            "minusNumber",
                            "bbType"
                        ],
                        "additionalProperties": false
                    },
                    "compare": {
                        "type": "string",
                        "description": "The comparison operator"
                    },
                    "compareValue": {
                        "type": "number",
                        "description": "The value to compare against"
                    }
                },
                "required": [
                    "numerator",
                    "denominator",
                    "compare",
                    "compareValue"
                ],
                "additionalProperties": false
            },
            "params": {
                "type": "object",
                "description": "Additional parameters for specific strategies",
                "properties": {
                    "bbValue": {
                        "type": "object",
                        "description": "Bollinger Bands specific values",
                        "properties": {
                            "sma": {
                                "type": "number",
                                "description": "SMA period"
                            },
                            "std": {
                                "type": "number",
                                "description": "Standard deviation"
                            }
                        },
                        "required": [
                            "sma",
                            "std"
                        ],
                        "additionalProperties": false
                    },
                    "macdValue": {
                        "anyOf": [
                            {
                                "type": "object",
                                "description": "MACD specific values",
                                "properties": {
                                    "fast": {
                                        "type": "number",
                                        "description": "Fast period"
                                    },
                                    "slow": {
                                        "type": "number",
                                        "description": "Slow period"
                                    },
                                    "signal": {
                                        "type": "number",
                                        "description": "Signal period"
                                    }
                                },
                                "required": [
                                    "fast",
                                    "slow",
                                    "signal"
                                ],
                                "additionalProperties": false
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "description": "MACD specific values"
                    }
                },
                "required": [
                    "bbValue",
                    "macdValue"
                ],
                "additionalProperties": false
            }
        },
        "required": [
            "conditionStyle",
            "conditionType",
            "formula",
            "timeFrameValue",
            "timeFrameUnit",
            "detail",
            "params"
        ],
        "additionalProperties": false
    }
}