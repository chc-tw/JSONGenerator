        },
        "conditionType": {
            "type": "object",
            "description": "Details about the condition type.",
            "properties": {
                "label": {
                    "type": "string",
                    "description": "The label for the condition type, e.g., 'Bollinger Bands'."
                },
                "value": {
                    "type": "string",
                    "description": "The value identifier for the condition type, e.g., 'bb'."
                }
            },
            "required": [
                "label",
                "value"
            ],
            "additionalProperties": false
        },
        "formula": {
            "type": "object",
            "description": "Details about the formula used.",
            "properties": {
                "label": {
                    "type": "string",
